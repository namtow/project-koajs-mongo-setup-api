{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "camelcase": ["error", { "properties": "never", "ignoreDestructuring": true, "ignoreImports": true }]
  }
}
